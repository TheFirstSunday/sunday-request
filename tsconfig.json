{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictBindCallApply": false
  },
  "tsconfigOverride": {
    "compilerOptions": {
      "module": "ES2015"
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
